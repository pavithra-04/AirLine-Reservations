
@{
    ViewBag.Title = "FlightsList";
}

<style>
    * {
        padding: 0;
        margin: 0;
    }

    .flight-depart {
        background-color: rgb(234, 229, 229);
        padding:10px 30px;
        margin:10px 10px;
    }

    .depart-col {
        padding-top: 20px;
        padding-left: 5px;
        font-size: 18px;
    }

    .depart-city {
        padding: 20px;
    }

    .flight-city {
        display: flex;
    }

    .time-col {
        padding: 10px;
    }

    .stop-col {
        padding: 10px;
    }

    .price-col {
        padding: 10px;
    }

    .timing {
        display: flex;
        margin: 10px;
        background-color: rgb(255, 255, 255);
    }

    .time-start {
        padding: 20px;
        font-size: 20px;
    }

    .arrow {
        padding: 20px;
    }

    .time-end {
        padding: 20px;
        font-size: 20px;
    }

    .flight-no {
        padding-top: 20px;
        padding-left: 120px;
    }

    .type {
        padding-top: 20px;
        padding-left: 200px;
        text-align: center;
    }

    .amount {
        padding-top: 20px;
        padding-left: 260px;
        font-size: 20px;
    }

    .textsize {
        font-size: 11px;
        color: rgb(155, 152, 152);
    }


</style>

  
