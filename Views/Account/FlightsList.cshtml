    <div class="container">
        @using (Html.BeginForm("FlightsList", "Account", FormMethod.Get))
        {
            <table>
                <tr>
                    <td style="padding-top:30px;">
                        <span><b>Search By:</b></span>
                        @Html.RadioButton("SearchBy", "CityName", true)
                        <text> City Name</text>
                        @Html.RadioButton("SearchBy", "Time")
                        <text> Time </text>

                    </td>
                </tr>

                <tr>
                    <td>
                        @Html.TextBox("searchValue", null, new { Class = "form-control", placeholder = "Enter CityName or Time" })
                    </td>
                    <td>
                        &nbsp;
                    </td>
                    <td>
                        <input type="submit" value="Search" class=" btn-info" />
                    </td>
                    <td style="padding-bottom:50px;">
                        &nbsp;
                    </td>
                </tr>
            </table>
        }
    </div>
