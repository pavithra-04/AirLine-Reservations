    <body>
     

        @using (Html.BeginForm("Profile", "Account", FormMethod.Post))
        {   



            <section class="contact">
                <div class="layout">
                    <div class="text-center">
                        <h6 class="section-title"  style="color: #e67e22">Complete Your Profile</h6>
                    </div>
                    <div class="grid-8 form">
                        <form action="php/email.php" method="post" id="contact_form" name="contactForm">
                            <div class="form-inline clearfix">
                                <div class="form-group grid-6 ">
                                    <input type="text" placeholder="Username" id="exampleInputName" name="name" class="form-control" style="width:550px;" disabled>
                                </div>
                                <div class="form-group grid-6">
                                    <input type="email" placeholder="Email address" id="exampleInputEmail" name="email" class="form-control" style="width:550px;" disabled>
                                </div>

                                <div class="form-group grid-6 ">
                                    <input type="text" placeholder="Phone Number" id="exampleInputNumber" name="number" class="form-control" style="width:550px;">
                                </div>
                                <div class="form-group grid-6">
                                    <input type="date" placeholder="Date Of Birth" id="exampleInputDate" name="dob" class="form-control" style="width:550px;">
                                </div>


                                <div class="form-group grid-6">
                                    <label for="Gender">Please select your Gender</label>
                                    <select id="Gender">
                                        <option value="male" selected>Female</option>
                                        <option value="female">Male</option>
                                        <option value="other">Others</option>
                                    </select>
                                </div>
                                <div class="form-group grid-6">
                                    <label for="Nationality">Please select your Nationality</label>
                                    <select id='dropdown'>
                                        <option value="1"  id="chkNo" > India </option>
                                        <option value="2" id="chkYes"  selected>Other</option>
                                    </select>
                                    <input type="text" id="textInput" placeholder="Enter your nationality" />

                                </div>
                                <div class="form-group grid-12">
                                    <textarea placeholder="Address" id="exampleInputMessage" rows="2" name="Address" class="form-control" style="width:550px;"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div style="display:none;" class="success" id="mail_success">
                                    Your message has been sent successfully.
                                </div><!-- success message -->
                                <div style="display:none;" class="error" id="mail_fail">
                                    Sorry, error occured this time sending your message.
                                </div><!-- error message -->
                            </div>
                            <div id="submit" class="form-group grid-12">
                                <input type="submit" value="send" class="btn  btn costom-btn" id="send_message" style="background-color: #e67e22">
                            </div>
                        </form>
                    </div> <!-- /.col-xs-12 .col-sm-offset-2 .col-sm-8 -->
                </div>
            </section>





            <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>


        }

